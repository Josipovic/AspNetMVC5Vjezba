@model IEnumerable<ASPNet6Vjezba.Models.Truck>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm()) {
    @Html.Label("Pretraži:")
    @Html.TextBox("search")
    <br />
    @Html.Label("Potrošnja od:")
    @Html.TextBox("consumptionfrom")
    <br />
    @Html.Label("Potrošnja do")
    @Html.TextBox("consumptionto")
    <br />
    @Html.Label("Dostupan:")
    @Html.TextBox("available")
    <br />
    @Html.Label("Km od:")
    @Html.TextBox("traveledkilometersfrom")
    <br />
    @Html.Label("Km do:")
    @Html.TextBox("traveledkilometersto")
    <br />
    @Html.Label("Nosivost od:")
    @Html.TextBox("capacityfrom")
    <br />
    @Html.Label("Nosivost do:")
    @Html.TextBox("capacityto")
    <br />
    @Html.Label("Visina od:")
    @Html.TextBox("heightfrom")
    <br />
    @Html.Label("Visina do:")
    @Html.TextBox("heightto")
    <br />
    <input type="submit" value="Pretraži" />
    <br />
    @Html.ActionLink("Povratak","Index")

}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consumption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TraveledKilometers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Consumption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TraveledKilometers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<p>Najveca potrošnja kamiona iznosi :@ViewBag.potrosnja</p>
<p>Ukupno kilometara: @ViewBag.ukupnokm</p>